{
  "app": {
    "name": "BambiSleep Church",
    "version": "1.0.0",
    "description": "A real-time community-voted link sharing platform for bambisleep content",
    "author": "BambiSleep Community",
    "debug": false
  },
  "database": {
    "backupEnabled": true,
    "backupInterval": 3600000,
    "collections": ["links", "creators", "votes", "comments"],
    "indexing": {
      "enabled": true,
      "fields": ["url", "title", "platform", "category"]
    }
  },
  "server": {
    "cors": {
      "enabled": true,
      "origins": ["bambisleep.chat", "bambisleep.church", "bambisleep.info"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
    },
    "compression": {
      "enabled": true,
      "level": 6,
      "threshold": 1024
    },
    "staticFiles": {
      "maxAge": 86400000,
      "etag": true
    }
  },
  "agents": {
    "discovery": {
      "enabled": true,
      "interval": 300000,
      "maxConcurrentRequests": 3,
      "patterns": {
        "bambisleep": ["bambi", "bimbo", "hypno", "conditioning", "trance"],
        "platforms": ["youtube", "soundcloud", "patreon", "bambicloud"]
      }
    },
    "feed": {
      "enabled": true,
      "validationStrict": false,
      "moderationEnabled": true,
      "autoApprove": false,
      "qualityThreshold": 0.6
    },
    "stats": {
      "enabled": true,
      "updateInterval": 60000,
      "retentionDays": 30,
      "metrics": ["views", "votes", "comments", "quality"]
    }
  },
  "features": {
    "realTimeUpdates": true,
    "contentValidation": true,
    "userVoting": true,
    "comments": true,
    "contentCrawling": true,
    "aiIntegration": true,
    "socialSharing": false,
    "userAccounts": false,
    "analytics": true
  },
  "security": {
    "helmet": {
      "enabled": true,
      "contentSecurityPolicy": {
        "enabled": false,
        "directives": {
          "defaultSrc": ["'self'"],
          "styleSrc": ["'self'", "'unsafe-inline'", "fonts.googleapis.com"],
          "fontSrc": ["'self'", "fonts.gstatic.com"],
          "imgSrc": ["'self'", "data:", "https:"],
          "scriptSrc": ["'self'", "'unsafe-inline'"]
        }
      }
    },
    "rateLimiting": {
      "enabled": true,
      "windowMs": 900000,
      "max": 100,
      "skipSuccessfulRequests": false
    }
  },
  "ui": {
    "theme": "cyberpunk",
    "animations": true,
    "realTimeIndicators": true,
    "responsiveDesign": true,
    "accessibility": {
      "enabled": true,
      "highContrast": false,
      "screenReader": true
    }
  },
  "content": {
    "validation": {
      "enabled": true,
      "strictMode": false,
      "minQualityScore": 0.3,
      "blockedDomains": [],
      "requiredFields": ["title", "url"]
    },
    "platforms": {
      "youtube": { "enabled": true, "embedSupport": true },
      "soundcloud": { "enabled": true, "embedSupport": true },
      "patreon": { "enabled": true, "embedSupport": false },
      "bambicloud": { "enabled": true, "embedSupport": false },
      "generic": { "enabled": true, "embedSupport": false }
    }
  }
}
