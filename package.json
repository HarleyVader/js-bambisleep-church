{
  "name": "js-bambisleep-church",
  "version": "1.0.0",
  "description": "A real-time community-voted link list for different bambisleep themes and categories.",
  "main": "src/app.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarleyVader/js-bambisleep-church.git"
  },
  "bugs": {
    "url": "https://github.com/HarleyVader/js-bambisleep-church/issues"
  },
  "homepage": "https://github.com/HarleyVader/js-bambisleep-church#readme",
  "scripts": {
    "start": "npm run setup && npm run build && NODE_ENV=production node src/server.js",
    "dev": "npm run setup && node --watch src/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run setup && cd frontend && npm run build && cp -r dist/* ../dist/",
    "build:backend": "node scripts/build.js",
    "setup": "node scripts/install.js",
    "test": "node tests/test.cjs",
    "config": "node scripts/generate-config.js",
    "install-and-start": "npm install && cd frontend && npm install && cd .. && npm start",
    "quick-start": "npm run install-and-start"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "geoip-lite": "^1.4.10",
    "mongodb": "^6.20.0",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.8.1",
    "zod": "^3.25.76"
  },
  "keywords": [
    "bambisleep",
    "community",
    "voting",
    "links",
    "church"
  ],
  "author": "melkanea",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "concurrently": "^9.1.2",
    "jest": "^30.0.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1"
  }
}
