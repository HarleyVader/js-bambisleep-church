<%- include('../partials/header') %>

<main>
    <div class="container">
        <div class="help-layout">            <!-- Sidebar Navigation -->
            <aside class="docs-sidebar">
                <h3>üìö Documentation</h3>
                <nav class="docs-nav">
                    <a href="/help" class="nav-item <%= !isMarkdown ? 'active' : '' %>">
                        üè† Help Overview
                    </a>
                    <% if (typeof availableDocs !== 'undefined' && availableDocs.length > 0) { %>
                        <% availableDocs.forEach(doc => { %>
                            <a href="/help/<%= doc.name %>" class="nav-item <%= (isMarkdown && currentDoc === doc.name) ? 'active' : '' %>">
                                üìÑ <%= doc.title %>
                            </a>
                        <% }); %>
                    <% } %>
                </nav>
            </aside>

            <!-- Main Content -->
            <section class="help-section">
