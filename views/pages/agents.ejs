<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Knowledgebase Agent - Bambi Sleep Church</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>
  <div class="agents-container">
    <h1 class="agent-title agent-title-center">Knowledgebase Agent Status</h1>
    <form action="/agents/submit-url" method="POST" class="agent-url-form" style="margin-bottom:2em; text-align:center;">
      <input type="url" name="url" placeholder="Enter URL to add to knowledgebase" required style="width:60%;padding:0.5em;">
      <button type="submit" style="padding:0.5em 1.5em;">Submit URL</button>
    </form>
    <% if (agentTasks && agentTasks.length) { %>
      <div class="agent-summary">
        <h2>Agent Summary</h2>
        <div><b>Agent Name:</b> <%= agentTasks[0].title %></div>
        <div><b>Description:</b> <%= agentTasks[0].description %></div>
        <div><b>Status:</b> <%= agentTasks[0].status %></div>
        <div><b>Started:</b> <%= agentTasks[0].createdAt %></div>
        <div><b>Last Updated:</b> <%= agentTasks[0].updatedAt %></div>
        <div><b>Last Run:</b> <%= agentTasks[0].lastRun || 'Never' %></div>
        <div class="progress-bar-bg">
          <div class="progress-bar" style="width:<%= agentTasks[0].completion %>%;"></div>
        </div>
        <div class="agent-completion"><b>Completion:</b> <%= agentTasks[0].completion %>%</div>
      </div>
      <hr>
      <h3>Tool Tasks</h3>
      <% agentTasks.forEach(function(task) { %>
        <div class="agent-task-detailed">
          <div class="agent-task-title"><b><%= task.title %></b> <span style="color:#888;">[<%= task.toolName %>]</span></div>
          <div class="agent-task-desc"><%= task.description %></div>
          <div class="progress-bar-bg">
            <div class="progress-bar" style="width:<%= task.completion %>%;"></div>
          </div>
          <div class="agent-task-status">
            <b>Status:</b> <%= task.status %> &mdash; <%= task.completion %>% complete
          </div>
          <div class="agent-task-details">
            <b>Created:</b> <%= task.createdAt %> &nbsp; <b>Updated:</b> <%= task.updatedAt %> &nbsp; <b>Last Run:</b> <%= task.lastRun || 'Never' %>
          </div>
          <% if (task.logs && task.logs.length) { %>
            <div class="agent-task-terminal" style="background:#181818;color:#39ff14;font-family:monospace;padding:1em;margin:1em 0;border-radius:6px;max-height:220px;overflow:auto;">
              <% task.logs.forEach(function(log) { %>
                <div>&gt; <%= log %></div>
              <% }) %>
            </div>
          <% } %>
          <% if (task.errors && task.errors.length) { %>
            <div class="agent-task-terminal" style="background:#181818;color:#ff3c3c;font-family:monospace;padding:1em;margin:1em 0;border-radius:6px;max-height:120px;overflow:auto;">
              <% task.errors.forEach(function(err) { %>
                <div>! <%= err %></div>
              <% }) %>
            </div>
          <% } %>
          <% if (task.subtasks && task.subtasks.length) { %>
            <div class="agent-task-subtasks">
              <b>Subtasks:</b>
              <ul>
                <% task.subtasks.forEach(function(sub) { %>
                  <li><%= sub.title %> - <%= sub.status %> (<%= sub.completion %>%)</li>
                <% }) %>
              </ul>
            </div>
          <% } %>
        </div>
      <% }) %>
      <hr>
      <h3>Available Tools</h3>
      <ul class="agent-tools-list">
        <li>crawl_url</li>
        <li>crawl_links</li>
        <li>crawl_metadata_batch</li>
        <li>save_url_data</li>
        <li>search_knowledge</li>
        <li>add_knowledge</li>
        <li>list_knowledge</li>
        <li>get_knowledge</li>
        <li>update_knowledge</li>
        <li>analyze_context</li>
        <li>delete_knowledge</li>
        <li>analyze_urls</li>
        <li>urlUpdater</li>
      </ul>
    <% } else { %>
      <div style="text-align:center; color:#aaa;">No agent tasks running.</div>
    <% } %>
  </div>
  <%- include('../partials/footer') %>
  <script src="/js/agents-dashboard.js"></script>
</body>
</html>
