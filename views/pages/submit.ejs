        .sitemap-tab.active {
            background: var(--color-primary-cyan);
            color: var(--color-bg-primary);
        }

        .sitemap-view {
            display: none;
            min-height: 300px;
        }

        .sitemap-view.active {
            display: block;
        }

        .sitemap-hierarchy {
            font-family: 'Courier New', monospace;
            font-size: 0.875rem;
            color: var(--color-text-primary);
            line-height: 1.6;
            max-height: 400px;
            overflow-y: auto;
            background: rgba(var(--color-bg-secondary-rgb), 0.5);
            border-radius: 0.5rem;
            padding: 1rem;
        }

        .domain-item {
            margin-bottom: 1.5rem;
            border: 1px solid rgba(var(--color-primary-cyan-rgb), 0.3);
            border-radius: 0.5rem;
            padding: 1rem;
        }

        .domain-header {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 0.5rem;
            color: var(--color-primary-cyan);
            font-weight: 600;
        }

        .domain-stats {
            font-size: 0.75rem;
            color: var(--color-text-secondary);
        }

        .folder-tree {
            margin-left: 1rem;
            border-left: 1px dashed rgba(var(--color-primary-cyan-rgb), 0.3);
            padding-left: 1rem;
        }

        .page-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.25rem 0;
            font-size: 0.875rem;
        }

        .page-title {
            color: var(--color-text-primary);
        }

        .page-score {
            font-size: 0.75rem;
            padding: 0.125rem 0.375rem;
            border-radius: 0.25rem;
            font-weight: 600;
        }

        .page-score.bambisleep {
            background: rgba(var(--color-primary-magenta-rgb), 0.2);
            color: var(--color-primary-magenta);
        }

        .link-tree-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .link-stat-item {
            background: rgba(var(--color-bg-secondary-rgb), 0.5);
            border: 1px solid var(--color-primary-cyan);
            border-radius: 0.5rem;
            padding: 0.75rem;
            text-align: center;
        }

        .link-stat-number {
            display: block;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--color-primary-cyan);
            margin-bottom: 0.25rem;
        }

        .link-stat-label {
            font-size: 0.75rem;
            color: var(--color-text-secondary);
        }

        .hub-page {
            background: rgba(var(--color-bg-secondary-rgb), 0.5);
            border: 1px solid var(--color-primary-cyan);
            border-radius: 0.5rem;
            padding: 0.75rem;
            margin-bottom: 0.5rem;
        }

        .hub-page-title {
            font-weight: 600;
            color: var(--color-text-primary);
            margin-bottom: 0.25rem;
        }

        .hub-page-stats {
            font-size: 0.75rem;
            color: var(--color-text-secondary);
        }

        @media (max-width: 768px) {
            .feed-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .feed-controls {
                width: 100%;
                justify-content: center;
            }

            .feed-container.grid-view {
                grid-template-columns: 1fr;
            }

            .crawl-options {
                flex-direction: column;
                gap: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>      <main>        <!-- BambiSleep Content Discovery Agent -->
        <div class="discovery-agent">            <div class="agent-header">
                <h1 class="agent-title">🌙 BambiSleep Discovery Agent</h1>
                <p class="agent-subtitle">Intelligent content detection for scripts, audios, videos, and images</p>
            </div>

            <!-- Progression Bar Section -->
            <div id="progressionSection" class="discovery-card" style="display: none;">
                <h3>📊 Crawl Progress</h3>
                
                <!-- Time and URL Counters -->
                <div class="progression-header">
                    <div class="time-display">
                        <span class="time-label">Time Elapsed:</span>
                        <span id="timeProgress" class="time-value">[00%00%0000]</span>
                    </div>
                    <div class="url-counters">
                        <div class="counter-item">
                            <span class="counter-number" id="urlsAdded">0</span>
                            <span class="counter-label">Added</span>
                        </div>
                        <div class="counter-item">
                            <span class="counter-number" id="urlsRemaining">0</span>
                            <span class="counter-label">Remaining</span>
                        </div>
                        <div class="counter-item">
                            <span class="counter-number" id="urlsFinished">0</span>
                            <span class="counter-label">Finished</span>
                        </div>
                    </div>
                </div>

                <!-- Progress Bar -->
                <div class="progress-bar">
                    <div id="progressFillBar" class="progress-fill"></div>
                    <div class="progress-text-overlay">
                        <span id="progressPercentage">0%</span>
                    </div>
                </div>

                <!-- Domain Breakdown -->
                <div class="domain-breakdown">
                    <h4>🌐 Domain Analysis</h4>
                    <div id="domainList" class="domain-list">
                        <!-- Domain entries will be populated here -->
                    </div>
                </div>

                <!-- Current Processing Status -->
                <div class="current-processing">
                    <div class="processing-item">
                        <span class="processing-label">Current Domain:</span>
                        <span id="currentDomain" class="processing-value">-</span>
                    </div>
                    <div class="processing-item">
                        <span class="processing-label">Current Path:</span>
                        <span id="currentPath" class="processing-value">-</span>
                    </div>
                    <div class="processing-item">
                        <span class="processing-label">Current File:</span>
                        <span id="currentFile" class="processing-value">-</span>
                    </div>
                    <div class="processing-item">
                        <span class="processing-label">Query Args:</span>
                        <span id="currentArgs" class="processing-value">-</span>
                    </div>
                </div>
            </div>

            <!-- Unified Submit Form -->
            <div class="discovery-card" id="unifiedSubmitSection" style="display: none;">
                <h3>📝 Single Content Submission</h3>
                <form id="unifiedSubmitForm">
                    <div class="form-group">
                        <label for="url">URL</label>
                        <input type="url" id="url" name="url" class="form-input" placeholder="https://example.com/content" required>
                        <div id="urlValidation" style="display: none;"></div>
                    </div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" class="form-input">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="description" name="description" class="form-input" rows="3"></textarea>
                    </div>
                    <div id="metadataPreview" style="display: none;">
                        <div id="metadataGrid"></div>
                        <div id="qualityScore"></div>
                    </div>
                    <button type="submit" id="submitButton" class="submit-button">Submit Content</button>
                </form>
                <div id="messageContainer"></div>
            </div>

            <!-- Crawl Fetch Form -->
            <div class="discovery-card" id="crawlFetchSection" style="display: none;">
                <h3>🕷️ Bulk Content Crawler</h3>
                <form id="crawlFetchForm">
                    <div class="form-group">
                        <label for="crawlUrls">URLs to Crawl</label>
                        <textarea id="crawlUrls" name="crawlUrls" class="form-input" rows="5" placeholder="Enter URLs to crawl..."></textarea>
                    </div>
                    <button type="submit" id="crawlSubmitButton" class="submit-button">Start Crawling</button>
                </form>
                <div id="crawlProgress" style="display: none;">
                    <div id="progressFill"></div>
                    <div id="progressText"></div>
                    <div id="progressPercent"></div>
                </div>
                <div id="crawlLog"></div>
                <div id="feedResults"></div>
            </div>
            
            <div class="discovery-card">
                <form id="bambisleepDiscoveryForm">
                    <div class="form-group">
                        <label for="discoveryUrls">🔍 URLs to Analyze for BambiSleep Content</label>
                        <textarea id="discoveryUrls" name="discoveryUrls" class="form-input" rows="5"
                                  placeholder="Enter URLs to scan for BambiSleep content:&#10;https://soundcloud.com/bambisleep&#10;https://youtube.com/playlist?list=...&#10;https://patreon.com/bambisleep&#10;https://www.reddit.com/r/bambisleep/&#10;https://hypnotube.com/user/bambisleep"
                                  required></textarea>
                        <div class="form-hint">🎯 Agent will detect: Hypnosis scripts, audio files, training videos, subliminal content</div>
                    </div>

                    <!-- BambiSleep Detection Parameters -->
                    <div class="detection-status">
                        <div class="bambisleep-detector">
                            <div class="detector-icon">🧠</div>
                            <div class="detector-text">
                                <h4>BambiSleep Content Detector</h4>
                                <p>AI-powered detection for bambisleep-related content across all media types</p>
                            </div>
                            <div class="detector-confidence" id="detectionConfidence">Ready</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="contentTypes">📋 Content Types to Detect</label>
                        <div class="crawl-options">
                            <label class="checkbox-label">
                                <input type="checkbox" id="detectScripts" checked> 📜 Hypnosis Scripts
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" id="detectAudio" checked> 🎵 Audio Files
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" id="detectVideos" checked> 🎬 Training Videos
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" id="detectImages" checked> 🖼️ Visual Content
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" id="detectSubliminals" checked> 🌀 Subliminal Content
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="advancedMode">🚀 Advanced Mode</label>
                        <div class="crawl-options">
                            <label class="checkbox-label">
                                <input type="checkbox" id="enableAdvanced"> Enable advanced crawl with sitemap generation
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" id="autoIndex"> Auto-index discovered bambisleep content
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" id="generateSitemap"> Generate hierarchical sitemap
                            </label>
                        </div>
                    </div>

                    <div id="advancedOptions" class="form-group" style="display: none;">
                        <label>Advanced Crawl Settings</label>
                        <div class="advanced-settings">
                            <div class="setting-row">
                                <label for="maxDepth">Max Crawl Depth</label>
                                <select id="maxDepth" name="maxDepth" class="form-input">
                                    <option value="1">1 level (direct links only)</option>
                                    <option value="2" selected>2 levels</option>
                                    <option value="3">3 levels</option>
                                    <option value="4">4 levels (deep crawl)</option>
                                </select>
                            </div>
                            <div class="setting-row">
                                <label for="maxPages">Max Pages to Crawl</label>
                                <select id="maxPages" name="maxPages" class="form-input">
                                    <option value="25">25 pages</option>
                                    <option value="50" selected>50 pages</option>
                                    <option value="100">100 pages</option>
                                    <option value="200">200 pages</option>
                                </select>
                            </div>
                            <div class="setting-row">
                                <label for="crawlDelay">Crawl Delay (ms)</label>
                                <select id="crawlDelay" name="crawlDelay" class="form-input">
                                    <option value="100">100ms (ultra fast)</option>
                                    <option value="250">250ms (very fast)</option>
                                    <option value="500">500ms (fast)</option>
                                    <option value="1000" selected>1000ms (balanced)</option>
                                    <option value="2000">2000ms (respectful)</option>
                                    <option value="3000">3000ms (very slow)</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="maxResults">Max Results per URL</label>
                        <select id="maxResults" name="maxResults" class="form-input">
                            <option value="10">10 items</option>
                            <option value="25" selected>25 items</option>
                            <option value="50">50 items</option>
                            <option value="100">100 items</option>
                        </select>
                    </div>

                    <div id="discoveryErrors"></div>

                    <button type="submit" id="startDiscoveryButton" class="submit-button">
                        🚀 Start BambiSleep Discovery Scan
                    </button>
                </form>
            </div>

            <!-- Discovery Progress & Results -->
            <div id="discoveryProgress" class="crawl-progress" style="display: none;">
                <h3>🔄 BambiSleep Content Discovery Progress</h3>
                
                <div class="progress-bar">
                    <div id="discoveryProgressBar" class="progress-fill"></div>
                    <div class="progress-text-overlay" id="discoveryProgressText">Ready...</div>
                </div>
                
                <div class="crawl-log" id="discoveryLog"></div>
            </div>

            <!-- Discovery Results -->
            <div id="discoveryResults" class="feed-results" style="display: none;">
                <div class="feed-header">
                    <h3>🌙 BambiSleep Content Discovered</h3>
                    <div class="feed-stats" id="discoveryStats"></div>
                </div>
                
                <div id="discoveredContent" class="feed-container grid-view">
                    <!-- Discovered bambisleep content will be displayed here -->
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>    <script src="/js/bambisleep-discovery-agent.js"></script>
    <script src="/js/bambisleep-feed-agent.js"></script>
    <script src="/js/bambisleep-stats-agent.js"></script>
    <script src="/js/submit.js"></script>
</body>
</html>
