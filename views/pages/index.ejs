<style>
  .hero-enhanced {
    position: relative;
    background: linear-gradient(135deg, rgba(139, 69, 219, 0.1), rgba(255, 20, 147, 0.1));
    border: 2px solid var(--primary);
    border-radius: 20px;
    padding: 40px;
    margin: 20px 0;
    overflow: hidden;
  }

  .hero-enhanced::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(139, 69, 219, 0.05) 0%, transparent 70%);
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {

    0%,
    100% {
      transform: scale(1) rotate(0deg);
    }

    50% {
      transform: scale(1.1) rotate(180deg);
    }
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 30px;
    margin-top: 25px;
    flex-wrap: wrap;
  }

  .stat-item {
    background: rgba(0, 0, 0, 0.3);
    padding: 15px 20px;
    border-radius: 10px;
    border: 1px solid var(--accent);
    text-align: center;
    min-width: 120px;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--secondary);
    display: block;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-top: 5px;
  }

  .feature-grid-enhanced {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 25px;
    margin: 40px 0;
  }

  .feature-card-enhanced {
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    backdrop-filter: blur(10px);
    border: 1px solid var(--primary);
    border-radius: 15px;
    padding: 25px;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
  }

  .feature-card-enhanced:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: var(--secondary);
    box-shadow: 0 15px 35px rgba(139, 69, 219, 0.2);
  }

  .feature-card-enhanced::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.6s;
  }

  .feature-card-enhanced:hover::before {
    left: 100%;
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 15px;
    display: block;
    text-align: center;
  }

  .feature-title {
    color: var(--secondary);
    margin-bottom: 15px;
    font-size: 1.3rem;
  }

  .feature-description {
    line-height: 1.6;
    margin-bottom: 20px;
    color: var(--text-secondary);
  }

  .btn-enhanced {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border: none;
    color: white;
    padding: 12px 25px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
    position: relative;
    overflow: hidden;
  }

  .btn-enhanced:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 25px rgba(139, 69, 219, 0.3);
    color: white;
    text-decoration: none;
  }

  .new-badge {
    background: linear-gradient(45deg, #ff1493, #8b45db);
    color: white;
    font-size: 0.7rem;
    padding: 3px 8px;
    border-radius: 12px;
    position: absolute;
    top: 10px;
    right: 10px;
    animation: glow 2s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from {
      box-shadow: 0 0 5px #ff1493;
    }

    to {
      box-shadow: 0 0 20px #ff1493, 0 0 30px #8b45db;
    }
  }

  .quick-actions {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 15px;
    padding: 30px;
    margin: 40px 0;
    border: 1px solid var(--accent);
  }

  .quick-actions h3 {
    text-align: center;
    margin-bottom: 25px;
    color: var(--primary);
  }

  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .status-indicator {
    display: inline-block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #00ff00;
    margin-right: 8px;
    animation: blink 2s infinite;
  }

  @keyframes blink {

    0%,
    50% {
      opacity: 1;
    }

    51%,
    100% {
      opacity: 0.3;
    }
  }
</style>

