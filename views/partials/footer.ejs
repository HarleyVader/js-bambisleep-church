    <script>
      async function playBambiAudio() {
        const status = document.getElementById('audioStatus');
        try {
          status.textContent = '🎵 Starting playback...';
          const response = await fetch('/api/audio/play', {
            method: 'POST'
          });
          const data = await response.json();
          if (data.success) {
            status.textContent = '🎵 Playing Bambi Sleep Audio';
            status.style.color = '#00ff00';
          } else {
            status.textContent = '❌ Failed to start';
            status.style.color = '#ff0000';
          }
        } catch (error) {
          status.textContent = '❌ Error: ' + error.message;
          status.style.color = '#ff0000';
        }
      }

      async function stopBambiAudio() {
        const status = document.getElementById('audioStatus');
        try {
          const response = await fetch('/api/audio/stop', {
            method: 'POST'
          });
          const data = await response.json();
          status.textContent = data.message;
          status.style.color = '#ffa500';
          setTimeout(() => {
            status.textContent = '';
          }, 3000);
        } catch (error) {
          status.textContent = '❌ Error: ' + error.message;
          status.style.color = '#ff0000';
        }
      }
    </script>
