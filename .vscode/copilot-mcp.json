{
  "mcpIntegration": {
    "enabled": true,
    "servers": [
      {
        "name": "bambisleep-church",
        "description": "BambiSleep Church Knowledge Base MCP Server - Local knowledge search and content analysis",
        "endpoint": "stdio",
        "command": "node",
        "args": [
          "src/mcp/McpServer.js"
        ],
        "cwd": "f:\\js-bambisleep-church",
        "tools": [
          "search_knowledge",
          "get_knowledge_stats",
          "fetch_webpage"
        ],
        "capabilities": {
          "knowledgeSearch": true,
          "webContentAnalysis": true,
          "bambiSleepExpertise": true,
          "contentCategorization": true
        }
      },
      {
        "name": "bambisleep-church-remote",
        "description": "BambiSleep Church Remote MCP Server with agent orchestration",
        "endpoint": "https://bambisleep-church-remote.com:9999",
        "tools": [
          "get_links",
          "add_link",
          "vote_link",
          "create_agent",
          "prompt_agent",
          "get_agents",
          "agent_communicate"
        ],
        "capabilities": {
          "linkManagement": true,
          "agentOrchestration": true,
          "communityVoting": true,
          "contentGeneration": true,
          "remoteExecution": true
        }
      }
    ],
    "contextSharing": {
      "enableAutoContext": true,
      "includeWorkspaceFiles": true,
      "includeGitHistory": false,
      "maxContextSize": 100000,
      "priorityFiles": [
        "src/knowledge/knowledge.json",
        "src/mcp/**/*.js",
        ".env",
        "README.md"
      ]
    },
    "toolExecution": {
      "allowAutomaticExecution": true,
      "requireConfirmation": false,
      "timeoutMs": 45000,
      "retryAttempts": 2,
      "trustedServers": [
        "bambisleep-church"
      ]
    },
    "knowledgeIntegration": {
      "enableSemanticSearch": true,
      "autoSuggestTools": true,
      "contextualRelevance": 0.8,
      "bambiSleepFocus": true
    }
  }
}
