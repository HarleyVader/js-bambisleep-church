{
  "mcpIntegration": {
    "enabled": true,
    "servers": [
      {
        "name": "bambisleep-church",
        "description": "BambiSleep Church Knowledge Base MCP Server - Local knowledge search and content analysis",
        "endpoint": "stdio",
        "command": "node",
        "args": [
          "src/mcp/McpServer.js"
        ],
        "cwd": "f:\\js-bambisleep-church",
        "tools": [
          "search_knowledge",
          "get_knowledge_stats",
          "fetch_webpage"
        ],
        "capabilities": {
          "knowledgeSearch": true,
          "webContentAnalysis": true,
          "bambiSleepExpertise": true,
          "contentCategorization": true
        }
      },
      {
        "name": "bambisleep-church-remote",
        "description": "BambiSleep Church Remote MCP Server with agent orchestration",
        "endpoint": "https://at.bambisleep.church:9999",
        "tools": [
          "get_links",
          "add_link",
          "vote_link",
          "create_agent",
          "prompt_agent",
          "get_agents",
          "agent_communicate"
        ],
        "capabilities": {
          "linkManagement": true,
          "agentOrchestration": true,
          "communityVoting": true,
          "contentGeneration": true,
          "remoteExecution": true
        }
      },
      {
        "name": "vscode-mcp-server",
        "description": "VS Code MCP Server for workspace integration",
        "endpoint": "stdio",
        "command": "node",
        "args": ["-e", "require('@vscode/mcp-server').start()"],
        "tools": [
          "read_file",
          "write_file",
          "list_directory",
          "run_command",
          "search_files"
        ],
        "capabilities": {
          "fileSystem": true,
          "commandExecution": true,
          "workspaceIntegration": true,
          "codeAnalysis": true
        }
      },
      {
        "name": "azure-mcp-server", 
        "description": "Azure services integration via MCP",
        "endpoint": "stdio",
        "command": "az-mcp-server",
        "tools": [
          "list_resources",
          "deploy_resource",
          "monitor_service",
          "query_logs"
        ],
        "capabilities": {
          "azureIntegration": true,
          "cloudDeployment": true,
          "resourceManagement": true,
          "monitoring": true
        }
      },
      {
        "name": "agent-smith-mcp",
        "description": "Agent Smith MCP for workflow automation",
        "endpoint": "stdio", 
        "command": "agent-smith-server",
        "tools": [
          "create_workflow",
          "execute_workflow", 
          "manage_agents",
          "schedule_tasks"
        ],
        "capabilities": {
          "workflowAutomation": true,
          "agentManagement": true,
          "taskScheduling": true,
          "vibeCoding": true
        }
      },
      {
        "name": "datamates-mcp",
        "description": "Datamates MCP for data engineering workflows",
        "endpoint": "stdio",
        "command": "datamates-server",
        "tools": [
          "query_database",
          "transform_data",
          "validate_schema",
          "generate_pipeline"
        ],
        "capabilities": {
          "dataEngineering": true,
          "databaseIntegration": true,
          "pipelineGeneration": true,
          "schemaValidation": true
        }
      }
    ],
    "contextSharing": {
      "enableAutoContext": true,
      "includeWorkspaceFiles": true,
      "includeGitHistory": false,
      "maxContextSize": 100000,
      "priorityFiles": [
        "src/knowledge/knowledge.json",
        "src/mcp/**/*.js",
        ".env",
        "README.md"
      ]
    },
    "toolExecution": {
      "allowAutomaticExecution": true,
      "requireConfirmation": false,
      "timeoutMs": 45000,
      "retryAttempts": 2,
      "trustedServers": [
        "bambisleep-church"
      ]
    },
    "knowledgeIntegration": {
      "enableSemanticSearch": true,
      "autoSuggestTools": true,
      "contextualRelevance": 0.8,
      "bambiSleepFocus": true
    },
    "orchestration": {
      "enabled": true,
      "serverPriority": [
        "bambisleep-church",
        "bambisleep-church-remote", 
        "vscode-mcp-server",
        "agent-smith-mcp",
        "azure-mcp-server",
        "datamates-mcp"
      ],
      "taskDistribution": "capability_based",
      "serverLoadBalancing": true,
      "responseConsolidation": true,
      "conflictResolution": "priority_weighted",
      "healthChecking": {
        "enabled": true,
        "intervalMs": 30000,
        "timeoutMs": 5000,
        "retryAttempts": 3
      },
      "fallbackBehavior": {
        "onServerUnavailable": "try_next_priority",
        "gracefulDegradation": true,
        "dynamicFailover": true
      }
    }
  }
}
