# BambiSleepâ„¢ Church MCP Control Tower Environment Variables Template
# Copy this file to .env and configure with your actual API keys
# DO NOT commit .env file with real credentials

# GitHub Integration
GITHUB_TOKEN="your_github_token_here"

# Stripe Payment Processing
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# HuggingFace AI/ML
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_HUB_TOKEN="hf_your_huggingface_token"

# Azure Quantum Computing
# Get from: https://portal.azure.com
AZURE_QUANTUM_WORKSPACE_ID="your_azure_quantum_workspace_id"
AZURE_QUANTUM_SUBSCRIPTION_ID="your_azure_subscription_id"
AZURE_QUANTUM_RESOURCE_GROUP="your_resource_group"
AZURE_QUANTUM_LOCATION="your_azure_region"

# Microsoft Clarity Analytics
# Get from: https://clarity.microsoft.com
CLARITY_PROJECT_ID="your_clarity_project_id"

# MongoDB Connection
MONGODB_CONNECTION_STRING="mongodb://localhost:27017/bambisleep-church"

# MCP Control Tower Configuration
NODE_ENV="development"
PORT="3000"
DOCS_PORT="4000"

# Security Settings
SESSION_SECRET="generate_a_secure_random_string"
JWT_SECRET="generate_a_secure_jwt_secret"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/bambisleep-church.log"

# Unity Cathedral Renderer Configuration
UNITY_ENABLED="true"
UNITY_PATH="/opt/unity/Editor/Unity"
UNITY_PROJECT_PATH="./unity-projects/cathedral-renderer"
UNITY_RENDER_ON_START="false"
UNITY_MESSAGE_TIMEOUT="30000"
